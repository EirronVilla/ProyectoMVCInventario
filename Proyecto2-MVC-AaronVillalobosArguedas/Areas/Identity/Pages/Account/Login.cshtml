@page
@model LoginModel

@{
	ViewData["Title"] = "Iniciar Sesión";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/sb-admin-2.min.css" />

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Proyecto2_MVC_AaronVillalobosArguedas.styles.css" asp-append-version="true" />
</head>

<body class="bg-gradient-primary">
	<div class="container">

		<!-- Outer Row -->
		<div class="row d-flex align-items-center justify-content-center">
			<div class="col-xl-10 col-lg-12 col-md-9">
				<div class="card o-hidden border-0 shadow-lg my-5">
					<div class="card-body p-0">
						<!-- Nested Row within Card Body -->
						<div class="row">
							<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
							<div class="col-lg-6">
								<div class="p-5">
									<div class="text-center">
										<h1 class="h4 text-gray-900 mb-4">Inicio de Sesi&oacute;n</h1>
									</div>
									<form id="account" method="post">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="form-floating mt-2">
											<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
											<label asp-for="Input.Email" class="form-label"></label>
											<span asp-validation-for="Input.Email" class="text-danger"></span>
										</div>
										<div class="form-floating mt-2">
											<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
											<label asp-for="Input.Password" class="form-label"></label>
											<span asp-validation-for="Input.Password" class="text-danger"></span>
										</div>
										<div>
											<div class="checkbox">
												<label asp-for="Input.RememberMe" class="ml-4 mt-2 form-label">
													<input class="form-check-input" asp-for="Input.RememberMe" />
													Recordar
												</label>
											</div>
										</div>
										<div>
											<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
										</div>
										<div class="mt-3">
											<a id="forgot-password" asp-page="./ForgotPassword">Olvidé mi contraseña.</a>
											<br/>
											<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar como un nuevo usuario.</a>
											<br/>
											<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar notificación de Email</a>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>

	</div>
</body>
</html>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
