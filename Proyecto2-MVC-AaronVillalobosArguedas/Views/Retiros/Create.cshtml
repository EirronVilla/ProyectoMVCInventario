            </div>
            <div class="form-group">
                <label asp-for="CantidadARetirar" class="control-label"></label>
                <input asp-for="CantidadARetirar" class="form-control" />
                <span asp-validation-for="CantidadARetirar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Realizar Retiro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

